INCLUDE network.makejail
INCLUDE options.makejail

PKG --jexec --upgrade
PKG redis
PKG --jexec --autoremove
PKG --jexec --clean

SYSRC redis_enable=YES

CMD sed -i '' \
  -e 's/^bind 127\.0\.0\.1 -::1/bind 0.0.0.0/' \
  -e 's/^protected-mode yes/protected-mode no/' \
  /usr/local/etc/redis.conf

SERVICE redis start
