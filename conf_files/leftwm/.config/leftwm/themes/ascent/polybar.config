[colors]
bg = #2e3440
fg = #e5e9f0

# polar night
pn-darker = #3b4252
pn-light = #4c566a

# snow storm
sn-dark = #d8dee9
sn-light = #eceff4

# frost
f-mint = #8fbcbb
f-bright = #88c0d0
f-washed = #81a1c1
f-dark = #5e81ac

# aurora
a-green = #a3be8c
a-magenta = #b48ead
a-orange = #d08770
a-red = #bf616a

[bar/mainbar]
monitor = ${env:MONITOR}
width = 100%
height = 20
background = ${colors.bg}
foreground = ${colors.fg}
font-0 = Fira Code SemiBold:size=10;1
separator = "|"
separator-foreground = ${colors.f-mint}

modules-left = xwindow
modules-center = ewmh date time
modules-right = cpu memory battery wireless-network wired-network

[module/xwindow]
type = internal/xwindow
label = " %title:0:100:...%"

[module/ewmh]
type = internal/xworkspaces
label-active = " %name% "
label-active-background = ${colors.f-bright}
label-active-foreground = ${colors.pn-darker}
label-occupied = " %name% "
label-occupied-background = ${colors.pn-light}
label-urgent = " %name% "
label-urgent-background = ${colors.a-orange}
label-urgent-foreground = ${colors.win-urgent-fg}
label-empty = " %name% "
label-empty-foreground = ${colors.foreground}

[module/date]
type = internal/date
date = " %a, %b %d "
format-foreground = ${colors.a-magenta}

[module/time]
type = internal/date
date = " %I:%M %p "


[module/cpu]
type = internal/cpu
interval = 1
label = " CPU: %percentage:2%% "
label-foreground = ${colors.f-bright}
warn-percentage = 80

[module/memory]
type = internal/memory
interval = 3
label = " RAM: %gb_used% "

[module/wireless-network]
type = internal/network
interface = wlp0s20f3
interface-type = wireless
unknown-as-up = true

label-disconnected = " not connected "
label-disconnected-foreground = ${colors.a-red}
format-disconnected =" WiFi: <label-disconnected> "

label-connected = " %{F#a3be8c}↓ %{F#d8dee9}%downspeed:9%%{F#4c566a} | %{F#88c0d0}↑ %{F#d8dee9}%upspeed:9%%{F-} "
format-connected = " WiFi: <label-connected> "

[module/wired-network]
type = internal/network
interface = enp0s31f6
interface-type = wireless
unknown-as-up = true

label-disconnected = " not connected "
label-disconnected-foreground = ${colors.a-red}
format-disconnected =" eth: <label-disconnected> "

label-connected = " %{F#a3be8c}↓ %{F#d8dee9}%downspeed:9%%{F#4c566a} | %{F#88c0d0}↑ %{F#d8dee9}%upspeed:9%%{F-} "
format-connected = " eth: <label-connected> "

[module/battery]
type = internal/battery
full-at = 100
low-at = 10
battery = BAT0
poll-interval = 5
